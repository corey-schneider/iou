<div class="px-5">
  <div class="grid grid-cols-3 border-b border-slate-400 py-3">

    <%# Navigation opener %>
    <div id="nav-opener" class="border">[ x ]</div>

    <%# Center of page %>
    <div class="border text-center">
      <p class="text-xl">IOU</p>

      <% if current_user %>
        <%= link_to "Logged in as #{current_user.first_name}", destroy_user_session_path, class: 'text-sm font-light hover:underline' %>
      <% else %>
        <%= link_to 'Sign in', new_user_session_url %>
      <% end %>
    </div>

    <%# User profile page %>
    <div class="border text-right">
      <%= link_to user_path(current_user) do %>
        <p class="inline-block rounded-full border border-black p-2"><%= initials(current_user) %></p>
      <% end %>
    </div>
  </div>

  <div class="py-5">
    <p>Transactions from [month picker]</p>
  </div>

  <div class="sticky pb-2 font-light text-xs text-gray-400">[8/30/22]</div>

  <% @bills.each do |bill| %>
    <%= link_to bill do %>
      <div class="grid grid-cols-5">
        <div class="col-span-4">
          <p class="text-xl"><%= bill.user.first_name %> <%= paid_or_owes(bill) %> <%= User.find(bill.person2_id).first_name %> for <%= bill.title %></p>
        </div>
        <div class="shrink-0 text-right">
          <% if bill.paid? %>
            <p class="text-xl font-semibold text-green-700">
          <% else %>
            <p class="text-xl font-semibold text-red-700">
          <% end %>
            <%= number_to_currency(bill.amount) %>
          </p>
        </div>
      </div>

      <% if bill.paid? %>
        <div class="pt-1">
          <p class="font-light text-gray-600">Paid via <%= bill.paid_via %> on <%= bill.paid_on %> (if paid)</p>
        </div>
      <% end %>

      <% if !bill.description.empty? %>
        <div class="font-light text-gray-500 text-sm mt-2 pl-4">
          <p><%= bill.description %></p>
        </div>
      <% end %>
    <% end %>

      <div class="my-5 border border-dashed border-black"></div>
  <% end %>

  <p><%= link_to 'go to bills', bills_path %></p>

</div>
